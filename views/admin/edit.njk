{% extends 'admin_layout.njk' %}

{% block content %}

<div class="admin-index">
    <p class="section-title">Editando Receita</p>
    <div class="buttons">
        <button class='delete' form="deleteForm" type="submit">Deletar Receita</button>
        <button form="saveForm" type="submit">Salvar Receita</button>
    </div>
</div>


<form id="saveForm" action="/admin/recipes?_method=PUT" method="post">

    <input type="hidden" name="id" value="{{recipe.id}}">

    {% include 'admin/fields.njk' %}
</form>


<form id="deleteForm" action="/admin/recipes?_method=DELETE" method="post">

    <input type="hidden" name="id" value="{{recipe.id}}">
    
</form>

<script src="/scripts.js"></script>

{% endblock content %}