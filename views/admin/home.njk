{% extends 'admin_layout.njk' %}

{% block content %}

<div class="admin-index">
    <p class="section-title">Gerenciar receitas</p>
    <a href="/admin/recipes/create">Criar Receita</a>
</div>

<section class="cards cards-admin">
{% for recipe in recipes %}
    <div class="card card-admin">
        <img src="{{recipe.image_url}}">
        <div>
            <p class="card-title">{{recipe.title}}</p>
            <p class="card-title card-author">por {{recipe.author}}</p>
            <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
        </div>
    </div>
{% endfor %}
</section>


<script src="/scripts.js"></script>

{% endblock content %}